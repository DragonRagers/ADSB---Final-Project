package adsb.finalproject.bdgub.bdcon;

import java.awt.Graphics;

public class PlayerBullet extends Player{
	private boolean dLeft = false;
	private boolean dRight = false;
	private boolean dUp = false;
	private boolean dDown = false;
	private Point pos;
	private int stepSize = 6;
	
	static Point[] bulletShape = {
			new Point(0,0),
			new Point(3,0),
			new Point(3,3),
			new Point(0,3)
	};

	public PlayerBullet(Point pos, boolean sLeft, boolean sRight, boolean sUp, boolean sDown) {
		super(bulletShape, pos, 180);
		dLeft = sLeft;
		dRight = sRight;
		dUp = sUp;
		dDown = sDown;
	}
	
	public void move() {
		if (dUp && dRight) {
			position.x+=stepSize * Math.sqrt(2) / 2;
			position.y-=stepSize * Math.sqrt(2) / 2;
		} 
		else if (dUp && dLeft){
			position.x-=stepSize * Math.sqrt(2) / 2;
			position.y-=stepSize * Math.sqrt(2) / 2;
		}
		else if (dDown && dLeft){
			position.x-=stepSize * Math.sqrt(2) / 2;
			position.y+=stepSize * Math.sqrt(2) / 2;
		}
		else if (dDown && dRight){
			position.x+=stepSize * Math.sqrt(2) / 2;
			position.y+=stepSize * Math.sqrt(2) / 2;
		}
		else if (dUp){
			position.y-=stepSize;
		}
		else if (dRight){
			position.x+=stepSize;
		}
		else if (dLeft){
			position.x-=stepSize;
		}
		else if(dDown){
			position.y+=stepSize;
		}
	}
	
}


